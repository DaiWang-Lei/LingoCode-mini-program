page {
  background-color: #f8f8f8;
}

.page__bd, .weui-panel {
  margin-top: 30rpx;
}

.page__hd {
  padding: 20rpx 35rpx 0 35rpx;
}

.weui-footer {
  margin: 50rpx 0;
}

.weui-center {
  text-align: center;
}

.border-shadow {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.border-shadow .weui-panel__hd {
  padding: 15rpx 30rpx 15rpx;
  font-size: 15px;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.border-shadow {
  margin-top: 0;
  padding-bottom: 0;
}

.border-shadow .weui-media-box {
  padding: 30rpx;
}

.border-shadow{
  height: auto;
  line-height: 0;
  font-size: 80rpx;
  font-weight: bolder;
  color: #43b0d1;
  margin-right: 0.3em;
}

.border-shadow .weui-media-box__thumb {
  height: 48px;
  width: 48px;
}

.weui-grid {
  padding: 10px 10px;
  color: #333;
  width: 33%;
}

.weui-grid__icon {
  width: 81rpx;
  height: 81rpx;
}

.weui-panel:before, .weui-panel:after, .weui-grids, .weui-grid {
  border: 0;
}

.weui-media-box__desc {
  display: inherit;
  line-height: 1.8;
  color: #555;
}

.weui-cells__tips {
  padding-left: 0px;
}

.lingoTitle { 
  font-size: 35rpx;
  margin-left:30rpx;
}
.lingoInfo{
  height:150rpx;
  width: 100%;
  background:white;
  margin:30rpx;
}
.lingoInfoImg{
  margin:20rpx 0 0 20rpx;
  width: 81rpx;
  height: 81rpx;
}
.lingoText{
  position: absolute;
  margin-left:230rpx;
  margin-top:50rpx;
}
.lingoTime{
  position: absolute;
  margin-top:100rpx;
  margin-left:-90rpx;
  font-size:26rpx;
}

