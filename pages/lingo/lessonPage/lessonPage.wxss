.page__hd {
    width: 700rpx;
    height: 100vh;
    /* padding: 20rpx 35rpx 0 35rpx; */
    background: #fff;
}

.lingoInfo {
    height: 200rpx;
    width: 700rpx;
    position: relative;
    text-align: center;
    line-height: 200rpx;
    margin: 25rpx 20rpx 50rpx 25rpx;
    overflow: hidden;
    border-radius: 20rpx;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25), 0 6px 6px rgba(0, 0, 0, 0.22);
}

.lingoInfo image {
    height: 200rpx;
    width: 100%;
    border-radius: 15rpx;
}

.lingoText {
    color: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.rate {
    display: flex;
    margin-left: 30rpx;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 20rpx;
}

.outer {
    position: relative;
    width: 100%;
    height: 40rpx;
    background: #bbb;
    border-radius: 50rpx;
    padding-left: 21rpx;
}

.inner {
    margin: 10rpx 20rpx;
    width: 91%;
    height: 20rpx;
    background: #fff;
    border-radius: 50rpx;
}

.innerin {
    top: 0;
    left: 17rpx;
    position: absolute;
    margin: 10rpx 20rpx;
    height: 20rpx;
    background: #82BAD3;
    border-radius: 50rpx;
}

.vague {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.25;
}

.vague2 {
    position: absolute;
    width: 100%;
    height: 200rpx;
    background-color: rgb(68, 68, 219);
    opacity: 0.25;
}

.timeBox {
    text-align: center;
    display: flex;
    justify-content: center;
    align-content: center;
    flex-wrap: wrap;
    height: 200rpx;
    width: 700rpx;
    margin: 100rpx 0 0 25rpx;
    border-radius: 20rpx;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.03), 0 6px 6px rgba(0, 0, 0, 0.05);
}

.time-title {
    display: block;
    width: 100%;
}

.timeInfo {
    display: block;
    width: 100%;
}

.checkBtn {
    margin-top: 400rpx;
    margin-left: 45rpx;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.03), 0 6px 6px rgba(0, 0, 0, 0.05);
    background-color: rgb(38, 139, 206);
}