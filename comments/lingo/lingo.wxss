.page__hd {
    width: 700rpx;
    height: 100vh;
    /* padding: 20rpx 35rpx 0 35rpx; */
    background: #fff;
}

.lingoInfo {
    height: 200rpx;
    width: 700rpx;
    position: relative;
    text-align: center;
    line-height: 200rpx;
    margin: 25rpx 20rpx 50rpx 25rpx;
    /* overflow: hidden; */
}

.lingoInfo image {
    height: 200rpx;
    width: 100%;
    border-radius: 15rpx;
}

.lingoText {
    color: #fff;
    position: absolute;
    left: 40%;
    top: 8%;
}

.rate {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
}

.outer {
    width: 100%;
    height: 60rpx;
    background: #fff;
    border-radius: 50rpx;
}

.inner {
    margin: 15rpx auto;
    width: 90%;
    height: 30rpx;
    background: #eee;
    border-radius: 50rpx;
}

.vague {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.25;
}

.vague2 {
    position: absolute;
    width: 100%;
    height: 200rpx;
    background-color: rgb(68, 68, 219);
    opacity: 0.25;
}